@page
@model ServiceKit.WBS.Pages.Request.ItemEditModel
@{
    Layout = null;
}

<form method="post" asp-page="ItemEdit">
    <div class="modal-header">
        <h5 class="modal-title" id="exampleModalCenterTitle">Строка заявки</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
    <div class="modal-body">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="WBS_RequestItem.Code" class="control-label"></label>
            <input asp-for="WBS_RequestItem.Code" class="form-control" />
            <span asp-validation-for="WBS_RequestItem.Code" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="WBS_RequestItem.Name" class="control-label"></label>
            <input asp-for="WBS_RequestItem.Name" class="form-control" />
            <span asp-validation-for="WBS_RequestItem.Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="WBS_RequestItem.Comment" class="control-label"></label>
            <input asp-for="WBS_RequestItem.Comment" class="form-control" />
            <span asp-validation-for="WBS_RequestItem.Comment" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="WBS_RequestItem.NewCode" class="control-label"></label>
            <input asp-for="WBS_RequestItem.NewCode" class="form-control" />
            <span asp-validation-for="WBS_RequestItem.NewCode" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="WBS_RequestItem.NewName" class="control-label"></label>
            <input asp-for="WBS_RequestItem.NewName" class="form-control" />
            <span asp-validation-for="WBS_RequestItem.NewName" class="text-danger"></span>
        </div>
        <input type="hidden" asp-for="WBS_RequestItem.TreeItemId" />
        <input type="hidden" asp-for="WBS_RequestItem.IsDeleted" />
        <input type="hidden" asp-for="WBS_RequestItem.CreatedBy" />
        <input type="hidden" asp-for="WBS_RequestItem.Created" />
        <input type="hidden" asp-for="WBS_RequestItem.ModifiedBy" />
        <input type="hidden" asp-for="WBS_RequestItem.Modified" />
        <input type="hidden" asp-for="WBS_RequestItem.ParentId" />
        <input type="hidden" asp-for="WBS_RequestItem.Id" />
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Закрыть</button>
        <input type="submit" value="Сохранить" class="btn btn-primary" />
    </div>
</form>
