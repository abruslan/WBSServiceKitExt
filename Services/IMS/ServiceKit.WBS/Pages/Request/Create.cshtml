@page
@model ServiceKit.WBS.Pages.Request.CreateModel

@{
    Layout = null;
}

<form method="post" asp-page="Create">
    <div class="modal-header">
        <h5 class="modal-title" id="exampleModalCenterTitle">Новая заявка</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
    <div class="modal-body">
        <div class="row">
            <div class="col-md-12">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="WBS_Request.ProjectCode" class="control-label"></label>
                    <input asp-for="WBS_Request.ProjectCode" class="form-control" />
                    <span asp-validation-for="WBS_Request.ProjectCode" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="WBS_Request.ProjectName" class="control-label"></label>
                    <input asp-for="WBS_Request.ProjectName" class="form-control" />
                    <span asp-validation-for="WBS_Request.ProjectName" class="text-danger"></span>
                </div>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Отмена</button>
        <input type="submit" value="Создать" class="btn btn-primary" />
    </div>
</form>