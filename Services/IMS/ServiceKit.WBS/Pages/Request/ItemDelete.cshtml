@page
@model ServiceKit.WBS.Pages.Request.ItemDeleteModel
@{
    Layout = null;
}

<form method="post" asp-page="ItemDelete">
    <div class="modal-header">
        <h5 class="modal-title" id="exampleModalCenterTitle">Вы уверены, что хотите удалить запись?</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
    <div class="modal-body">
        <div>
            <dl class="row">
                <dt class="col-sm-12">
                    @Html.DisplayNameFor(model => model.WBS_RequestItem.Code)
                </dt>
                <dd class="col-sm-12">
                    @Html.DisplayFor(model => model.WBS_RequestItem.Code)
                </dd>
                <dt class="col-sm-12">
                    @Html.DisplayNameFor(model => model.WBS_RequestItem.Name)
                </dt>
                <dd class="col-sm-12">
                    @Html.DisplayFor(model => model.WBS_RequestItem.Name)
                </dd>
                <dt class="col-sm-12">
                    @Html.DisplayNameFor(model => model.WBS_RequestItem.Comment)
                </dt>
                <dd class="col-sm-12">
                    @Html.DisplayFor(model => model.WBS_RequestItem.Comment)
                </dd>
                <dt class="col-sm-12">
                    @Html.DisplayNameFor(model => model.WBS_RequestItem.NewCode)
                </dt>
                <dd class="col-sm-12">
                    @Html.DisplayFor(model => model.WBS_RequestItem.NewCode)
                </dd>
                <dt class="col-sm-12">
                    @Html.DisplayNameFor(model => model.WBS_RequestItem.NewName)
                </dt>
                <dd class="col-sm-12">
                    @Html.DisplayFor(model => model.WBS_RequestItem.NewName)
                </dd>
            </dl>

        </div>
    </div>
    <div class="modal-footer">
        <input type="hidden" asp-for="WBS_RequestItem.Id" name="id"/>
        <input type="hidden" asp-for="WBS_RequestItem.ParentId" />
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Отмена</button>
        <input type="submit" value="Удалить" class="btn btn-danger" />
    </div>
</form>
