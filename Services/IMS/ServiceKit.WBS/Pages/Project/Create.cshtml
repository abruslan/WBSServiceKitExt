@page
@model ServiceKit.WBS.Pages.Project.CreateModel

@{
    ViewData["Title"] = "Проекты";
}
@section BreadCrumb {
    @await Html.PartialAsync("_Breadcrumb", new BreadCrumbViewModel().Add("Проекты", "/Project/Index"))
}

<h4>Добавить новый проект</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="WBS_Project.ProjectCode" class="control-label"></label>
                <input asp-for="WBS_Project.ProjectCode" class="form-control" />
                <span asp-validation-for="WBS_Project.ProjectCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="WBS_Project.ProjectName" class="control-label"></label>
                <input asp-for="WBS_Project.ProjectName" class="form-control"/>
                <span asp-validation-for="WBS_Project.ProjectName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="WBS_Project.ProjectShortName" class="control-label"></label>
                <input asp-for="WBS_Project.ProjectShortName" class="form-control"/>
                <span asp-validation-for="WBS_Project.ProjectShortName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Создать проект" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
