@page
@model ServiceKit.WBS.Pages.Project.DeleteModel
@{
    ViewData["Title"] = "Удаления";
    Layout = null;
}


<form method="post" asp-page="Delete">
    <div class="modal-header">
        <h5 class="modal-title" id="exampleModalCenterTitle">Вы уверены, что хотите удалить проект @Model.WBS_Project.ProjectCode?</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
    <div class="modal-body">
        <div>
            <dl class="row">
                <dt class="col-sm-12">
                    @Html.DisplayNameFor(model => model.WBS_Project.ProjectCode)
                </dt>
                <dd class="col-sm-12">
                    @Html.DisplayFor(model => model.WBS_Project.ProjectCode)
                </dd>
                <dt class="col-sm-12">
                    @Html.DisplayNameFor(model => model.WBS_Project.ProjectName)
                </dt>
                <dd class="col-sm-12">
                    @Html.DisplayFor(model => model.WBS_Project.ProjectName)
                </dd>
            </dl>
        </div>
    </div>
    <div class="modal-footer">
        <input type="hidden" asp-for="WBS_Project.Id" />
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Отмена</button>
        <input type="submit" value="Удалить" class="btn btn-danger" />
    </div>
</form>

