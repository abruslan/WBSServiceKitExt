@page
@model ServiceKit.WBS.Pages.Project.ProjectPublishedModel
@{
    Layout = null;
}

<form method="post" asp-page="ProjectPublished">
    <div class="modal-header">
        <h5 class="modal-title" id="exampleModalCenterTitle">Выбор систем для синхронизации</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
    <div class="modal-body">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <ul style="list-style-type: none;">
            @for (int i = 0; i < Model.SyncSystems.Count; i++)
            {
                <li>
                    <input type="checkbox" asp-for="@Model.SyncSystems[i].Selected" />
                    <label asp-for="@Model.SyncSystems[i].Selected">@Model.SyncSystems[i].Name</label>
                    <input type="hidden" asp-for="@Model.SyncSystems[i].Id" />
                    <input type="hidden" asp-for="@Model.SyncSystems[i].Name" />
                </li>
            }
        </ul>
        <input type="hidden" asp-for="WBS_Project.Id" />
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Закрыть</button>
        <input type="submit" value="Сохранить" class="btn btn-primary" />
    </div>

</form>
    