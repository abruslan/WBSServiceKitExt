@page
@model ServiceKit.WBS.Pages.Dictionary.SyncSystems.CreateModel

@{
    ViewData["Title"] = "Системы для публикации";
}
@section BreadCrumb {
    @await Html.PartialAsync("_Breadcrumb", new BreadCrumbViewModel().Add("Справочники", "/Dictionary/Index").Add("Системы для публикации", "/Dictionary/SyncSystems/Index"))
}

<h4>Добавить новую</h4>
<hr />
<div class="row">
    <div class="col-md-12">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="WBS_SyncSystem.Name" class="control-label"></label>
                <input asp-for="WBS_SyncSystem.Name" class="form-control" />
                <span asp-validation-for="WBS_SyncSystem.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="WBS_SyncSystem.SystemType" class="control-label"></label>
                <select asp-for="WBS_SyncSystem.SystemType" asp-items="Html.GetEnumSelectList<WBS_SyncSystemType>()" class="form-control"></select>
                <span asp-validation-for="WBS_SyncSystem.SystemType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="WBS_SyncSystem.ConnectionString" class="control-label"></label>
                <input asp-for="WBS_SyncSystem.ConnectionString" class="form-control" />
                <span asp-validation-for="WBS_SyncSystem.ConnectionString" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="WBS_SyncSystem.TrustedConnection" /> @Html.DisplayNameFor(model => model.WBS_SyncSystem.TrustedConnection)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="WBS_SyncSystem.Login" class="control-label"></label>
                <input asp-for="WBS_SyncSystem.Login" class="form-control" />
                <span asp-validation-for="WBS_SyncSystem.Login" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="WBS_SyncSystem.Password" class="control-label"></label>
                <input asp-for="WBS_SyncSystem.Password" class="form-control" />
                <span asp-validation-for="WBS_SyncSystem.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Добавить" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
