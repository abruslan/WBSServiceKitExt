@page
@model ServiceKit.WBS.Pages.Administration.UserRoles.EditModel

@{
    ViewData["Title"] = "Роли пользователей";
}
@section BreadCrumb {
    @await Html.PartialAsync("_Breadcrumb", new BreadCrumbViewModel().Add("Список пользователей", "./Index"))
}

<h4>Редактирование</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="UserRole.UserName" class="control-label"></label>
                <input asp-for="UserRole.UserName" class="form-control" />
                <span asp-validation-for="UserRole.UserName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserRole.Role" class="control-label"></label>
                <input asp-for="UserRole.Role" class="form-control" />
                <span asp-validation-for="UserRole.Role" class="text-danger"></span>
            </div>
            @*<div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="UserRole.IsDeleted" /> @Html.DisplayNameFor(model => model.UserRole.IsDeleted)
                </label>
            </div>*@
            <input type="hidden" asp-for="UserRole.System" class="form-control" />
            <input type="hidden" asp-for="UserRole.CreatedBy" class="form-control" />
            <input type="hidden" asp-for="UserRole.Created" class="form-control" />
            <input type="hidden" asp-for="UserRole.ModifiedBy" class="form-control" />
            <input type="hidden" asp-for="UserRole.Modified" class="form-control" />
            <input type="hidden" asp-for="UserRole.Id" />
            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
