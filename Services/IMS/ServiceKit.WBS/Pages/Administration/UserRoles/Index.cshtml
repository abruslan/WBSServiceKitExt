@page
@model ServiceKit.WBS.Pages.Administration.UserRoles.IndexModel

@{
    ViewData["Title"] = "Роли пользователей";
}
@section BreadCrumb {
    @await Html.PartialAsync("_Breadcrumb", new BreadCrumbViewModel())
}

<h1>@ViewData["Title"]</h1>

<p>
    <a class="btn btn-outline-primary" asp-page="Create"><i class="bi bi-plus"></i> Добавить нового пользователя</a>
</p>
<table class="table datatable sortable">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.UserRole[0].UserName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserRole[0].Role)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserRole[0].Created)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserRole[0].Modified)
            </th>
            <th class="no-sort"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.UserRole)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.UserName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Role)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Created)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Modified)
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.Id"><img src="~/images/pencil.svg"/></a> &nbsp;&nbsp;
                    @*<a asp-page="./Details" asp-route-id="@item.Id">Details</a> |*@
                    <a asp-page="./Delete" asp-route-id="@item.Id"><img src="~/images/delete.svg" /></a>
                </td>
            </tr>
        }
    </tbody>
</table>
