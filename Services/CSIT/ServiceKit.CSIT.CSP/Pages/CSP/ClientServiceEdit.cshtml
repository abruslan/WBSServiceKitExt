@page
@model ServiceKit.CSIT.CSP.Pages.CSP.ClientServiceEditModel
@{
    Layout = null;
}

<form method="post" name="ClientServiceEditModel" id="ClientServiceEditModel">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="ClientService.Id" />
    <input type="hidden" asp-for="registerId" />
    <div class="modal-header">
        <h5 class="modal-title" id="exampleModalCenterTitle">Сервис</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
    <div class="modal-body">
        <div class="form-group">
            <label asp-for="ClientService.OriginalName" class="control-label"></label>
            <input asp-for="ClientService.OriginalName" class="form-control" />
            <span asp-validation-for="ClientService.OriginalName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="ClientService.Name" class="control-label"></label>
            <input asp-for="ClientService.Name" class="form-control" />
            <span asp-validation-for="ClientService.Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="ClientService.ClientAnnex" class="control-label"></label>
            <select asp-for="ClientAnnex" class="form-control select2" asp-items="Model.ClientAnnexes" onchange="newAnnexGroupToggle()">
                <option value="">Без приложения</option>
                <option value="new">Добавить новое</option>
            </select>
            <span asp-validation-for="ClientService.Name" class="text-danger"></span>
        </div>
        <div id="newannex-group" class="form-group" style="display: none;">
            <label class="control-label">Новое приложение</label>
            <input asp-for="NewAnnex" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="ClientService.Price" class="control-label"></label>
            <input asp-for="ClientService.Price" class="form-control" autofocus />
            <span asp-validation-for="ClientService.Price" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="ClientService.YearPrice" class="control-label"></label>
            <input asp-for="ClientService.YearPrice" class="form-control" autofocus />
            <span asp-validation-for="ClientService.YearPrice" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label class="control-label">(Необходимо указать только одну из цен)</label>
        </div>
    </div>

    <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Закрыть</button>
        <input type="submit" value="Сохранить" class="btn btn-primary" asp-page="ClientServiceEdit" />
    </div>
</form>
<script>
    setTimeout(function (e) { document.getElementById('ClientService_Price').focus(); }, 500);
    function newAnnexGroupToggle() {
        console.log($("#ClientAnnex").val());
        $("#newannex-group").toggle($("#ClientAnnex").val() === "new");
    }
</script>
@section Scripts {
<script>
</script>
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
