@page
@model ServiceKit.CSIT.CSP.Pages.Signature.EditModel

@{
    ViewData["Title"] = "Подписанты";
}
@section BreadCrumb {
    @await Html.PartialAsync("_Breadcrumb", new BreadCrumbViewModel().Add("Подписанты", "/Signature/Index"))
}

<h1>@ViewData["Title"]</h1>

<hr />
<div class="row">
    <div class="col-md-6">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Signer.Name" class="control-label"></label>
                <input asp-for="Signer.Name" class="form-control" />
                <span asp-validation-for="Signer.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Signer.FullName" class="control-label"></label>
                <textarea asp-for="Signer.FullName" class="form-control"></textarea>
                <span asp-validation-for="Signer.FullName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Signer.Position" class="control-label"></label>
                <textarea asp-for="Signer.Position" class="form-control"></textarea>
                <span asp-validation-for="Signer.Position" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Signer.Company" class="control-label"></label>
                <textarea asp-for="Signer.Company" class="form-control"></textarea>
                <span asp-validation-for="Signer.Company" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="Signer.CreatedBy" />
            <input type="hidden" asp-for="Signer.Created" />
            <input type="hidden" asp-for="Signer.ModifiedBy" />
            <input type="hidden" asp-for="Signer.Modified" />
            <input type="hidden" asp-for="Signer.Id" />
            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
