@page
@model LoginModel

@{
    ViewData["Title"] = "ABILITY";
    Layout = "~/Pages/Shared/_Login.cshtml";
}

<form id="account" method="post">
    <span class="login100-form-avatar">
        <img src="~/images/logo.png" />
    </span>

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="wrap-input100 validate-input m-t-50 m-b-35" data-validate="Укажите Email">
        <input asp-for="Input.Email" class="input100" />
        <span class="focus-input100" data-placeholder="Email"></span>
        <span asp-validation-for="Input.Email" class="text-danger"></span>
    </div>
    <div class="wrap-input100 validate-input m-b-50" data-validate="Укажите пароль">
        <input asp-for="Input.Password" class="input100" />
        <span class="focus-input100" data-placeholder="Пароль"></span>
        <span asp-validation-for="Input.Password" class="text-danger"></span>
    </div>
    <div class="container-login100-form-btn">
        <button type="submit" class="login100-form-btn">Войти</button>
    </div>
    <ul class="login-more p-t-30">
        <li class="m-b-8">
            <span class="txt1">
                Забыли 
            </span>
            <a id="forgot-password" asp-page="./ForgotPassword">ваш пароль?</a>
        </li>

        <li>
            <span class="txt1">
                Нет учетной записи?
            </span>
            <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Зарегистрироваться</a>
        </li>
    </ul>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
